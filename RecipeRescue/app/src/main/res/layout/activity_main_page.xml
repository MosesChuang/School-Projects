<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.group8.reciperescue.MainPage"
    android:background="@drawable/main_page_background"
    android:orientation="horizontal"
    android:weightSum="1.0">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight=".5"
        android:id="@+id/foodButton"
        android:onClick="onClickFood"
        android:background="@drawable/button_background"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight=".5"
        android:id="@+id/beverageButton"
        android:onClick="onClickBeverage"
        android:background="@drawable/button_background"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignTop="@+id/foodButton"
        android:layout_alignParentEnd="true" />



</LinearLayout>